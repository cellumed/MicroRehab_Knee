<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img01"
    android:orientation="vertical"
    tools:context="com.cellumed.healthcare.microfit.knee.Home.Act_UserInfo">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <ListView
            android:id="@+id/user_list"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:divider="@color/white"
            android:dividerHeight="0.5dp"
            android:layout_weight="9">
        </ListView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:scaleX="0.9"
            android:scaleY="0.8"
            android:background="@drawable/bt_delete_nor"
            android:onClick="onClickDelete"/>

        <Button
            android:id="@+id/bt_add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:scaleX="0.9"
            android:scaleY="0.8"
            android:background="@drawable/bt_register_nor"
            android:onClick="onClickAdd"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:src="@drawable/cellumed_logo" />
    </LinearLayout>

</LinearLayout>
